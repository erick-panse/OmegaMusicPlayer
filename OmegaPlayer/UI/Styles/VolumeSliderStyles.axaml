<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:local="clr-namespace:OmegaPlayer.Controls">

	<Style Selector="local|VolumeSlider">
		<Setter Property="Template">
			<ControlTemplate>
				<Grid Height="20" >
					<!-- Track Background -->
					<Border Name="PART_Track"
                            Background="Gray"
                            Height="5"
							HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            CornerRadius="2" />
					<Border Name="PART_FilledTrack" 
							Background="{StaticResource BViolet}" 
							Height="5" Width="0" 
							VerticalAlignment="Center" 
							CornerRadius="2" 
							HorizontalAlignment="Left" />


					<!-- Thumb -->
					<Canvas Name="PART_Canvas" Height="30" VerticalAlignment="Center" >
						<Thumb Name="PART_Thumb" Width="20"
                                             Height="20"
                               IsHitTestVisible="True">
							<Thumb.Template>
								<ControlTemplate>
									<Ellipse Fill="{StaticResource BViolet}"
                                             Width="20"
                                             Height="20" />
								</ControlTemplate>
							</Thumb.Template>
						</Thumb>
					</Canvas>
				</Grid>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>
