<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style>

		<Style.Resources>
			<LinearGradientBrush x:Key="POrange">
				<GradientStop Offset="0" Color="Purple"/>
				<GradientStop Offset="1" Color="Orange"/>
			</LinearGradientBrush>
		</Style.Resources>

		<Style.Resources>
			<LinearGradientBrush x:Key="MainColor">
				<GradientStop Offset="0" Color="#08142E"/>
				<GradientStop Offset="0.5" Color="#0D1117"/>
			</LinearGradientBrush>
		</Style.Resources>

		<Style.Resources>
			<LinearGradientBrush x:Key="SecondaryColor">
				<GradientStop Offset="0" Color="#41295a "/>
				<GradientStop Offset="0.9" Color="#2F0743 "/>
			</LinearGradientBrush>
		</Style.Resources>

		<Style.Resources>
			<LinearGradientBrush x:Key="AccentColor">
				<GradientStop Offset="0" Color="Blue"/>
				<GradientStop Offset="1" Color="Violet"/>
			</LinearGradientBrush>
		</Style.Resources>

		<Style.Resources>
			<LinearGradientBrush x:Key="TextColor">
				<GradientStop Offset="0.5" Color="#61045F"/>
				<GradientStop Offset="1" Color="#aa0744"/>
			</LinearGradientBrush>
		</Style.Resources>

		<Style.Resources>
			<LinearGradientBrush x:Key="FadingBlack">
				<LinearGradientBrush.Transform>
					<RotateTransform Angle="60"/>
				</LinearGradientBrush.Transform>
				<GradientStop Offset="0" Color="Transparent"/>
				<GradientStop Offset="0.7" Color="Black"/>
			</LinearGradientBrush>
		</Style.Resources>
	</Style>
</Styles>
