<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style>
		<Style.Resources>
			<LinearGradientBrush x:Key="MainColor">
				<GradientStop Offset="0" Color="#08142E"/>
				<GradientStop Offset="0.5" Color="#0D1117"/>
			</LinearGradientBrush>
		</Style.Resources>

		<Style.Resources>
			<LinearGradientBrush x:Key="SecondaryColor">
				<GradientStop Offset="0" Color="#0f0c29 "/>
				<GradientStop Offset="0.9" Color="#302b63 "/>
			</LinearGradientBrush>
		</Style.Resources>

		<Style.Resources>
			<LinearGradientBrush x:Key="AccentColor">
				<GradientStop Offset="0" Color="#0000FF"/>
				<GradientStop Offset="1" Color="#EE82EE"/>
			</LinearGradientBrush>
		</Style.Resources>

		<Style.Resources>
			<LinearGradientBrush x:Key="TextColor">
				<GradientStop Offset="0.5" Color="#7F00FF"/>
				<GradientStop Offset="1" Color="#E100FF"/>
			</LinearGradientBrush>
		</Style.Resources>

		<Style.Resources>
			<LinearGradientBrush x:Key="FadingBlack">
				<LinearGradientBrush.Transform>
					<RotateTransform Angle="60"/>
				</LinearGradientBrush.Transform>
				<GradientStop Offset="0" Color="Transparent"/>
				<GradientStop Offset="0.7" Color="Black"/>
			</LinearGradientBrush>
		</Style.Resources>
	</Style>
</Styles>
