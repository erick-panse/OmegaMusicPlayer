<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Style Selector="ComboBox">
		<Setter Property="Background" Value="{StaticResource MetallicBlackDarkSapphire}"/>
		<Setter Property="BorderBrush" Value="{StaticResource NeonVioletIndigo}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="MinWidth" Value="15"/>
		<Setter Property="MinHeight" Value="15"/>
		<Setter Property="Padding" Value="8,4"/>
		<Setter Property="MaxDropDownHeight" Value="200"/>
		<Setter Property="Template">
			<ControlTemplate>
				<Grid>
					<Border Name="border"
							Background="Transparent"
							BorderBrush="{StaticResource NeonVioletIndigo}"
							BorderThickness="{TemplateBinding BorderThickness}"
							CornerRadius="3">
						<Grid ColumnDefinitions="*,Auto">
							<ContentPresenter Name="ContentPresenter"
											Grid.Column="0"
											Content="{TemplateBinding SelectionBoxItem}"
											ContentTemplate="{TemplateBinding ItemTemplate}"
											HorizontalAlignment="Center"
											VerticalAlignment="Center"
											Margin="{TemplateBinding Padding}"/>

							<!-- Hidden dropdown button -->
							<Border Name="splitBorder"
									Grid.Column="1"
									Width="0"
									BorderBrush="{StaticResource VBlue}"
									BorderThickness="0">
								<Path Name="arrow"
									  Fill="Transparent"
									  Width="0"
									  Height="0"/>
							</Border>
						</Grid>
					</Border>

					<Popup Name="PART_Popup"
						   IsOpen="{TemplateBinding IsDropDownOpen, Mode=TwoWay}"
						   MinWidth="{Binding Bounds.Width, RelativeSource={RelativeSource TemplatedParent}}"
						   MaxHeight="{TemplateBinding MaxDropDownHeight}"
						   PlacementTarget="{TemplateBinding}"
						   IsLightDismissEnabled="True">
						<Border Background="{TemplateBinding Background}"
								BorderBrush="{StaticResource VBlue}"
								BorderThickness="1"
								CornerRadius="3">
							<ScrollViewer>
								<ItemsPresenter Name="PART_ItemsPresenter"
												ItemsPanel="{TemplateBinding ItemsPanel}"
												HorizontalAlignment="Stretch" 
												VerticalAlignment="Center"/>
							</ScrollViewer>
						</Border>
					</Popup>
				</Grid>
			</ControlTemplate>
		</Setter>
	</Style>

	<!-- Style for ComboBox items -->
	<Style Selector="ComboBox ComboBoxItem">
		<Setter Property="Background" Value="{StaticResource MetallicBlackDarkSapphire}"/>
		<Setter Property="Padding" Value="8,4"/>
		<Setter Property="Template">
			<ControlTemplate>
				<Border Name="border"
						Background="Transparent"
						BorderThickness="0"
						Padding="{TemplateBinding Padding}">
					<ContentPresenter Name="ContentPresenter"
									  Content="{TemplateBinding Content}"
									  ContentTemplate="{TemplateBinding ContentTemplate}"/>
				</Border>
			</ControlTemplate>
		</Setter>
	</Style>

	<!-- Style for ComboBox popup -->
	<Style Selector="ComboBox:pointerover /template/ Border#border">
		<Setter Property="Background" Value="{StaticResource MetallicBlackDarkSapphire}"/>
	</Style>

	<!-- Style for hovered ComboBox items -->
	<Style Selector="ComboBoxItem:pointerover /template/ Border#border">
		<Setter Property="Background" Value="{StaticResource DarkBluePurple}"/>
	</Style>

	<!-- Style for selected ComboBox items -->
	<Style Selector="ComboBoxItem:selected /template/ Border#border">
		<Setter Property="Background" Value="{StaticResource DarkBluePurple}"/>
	</Style>

	<!-- This targets the selection indicator specifically -->
	<Style Selector="ComboBoxItem:selected /template/ ContentPresenter">
		<Setter Property="Background" Value="Transparent"/>
	</Style>

	<!-- For consistency, also handle the pointer-over state -->
	<Style Selector="ComboBoxItem:pressed /template/ ContentPresenter">
		<Setter Property="Background" Value="{StaticResource DarkBluePurple}"/>
		<Setter Property="BorderThickness" Value="0"/>
	</Style>

	<!-- For consistency, also handle the pointer-over state -->
	<Style Selector="ComboBoxItem:pointerover /template/ ContentPresenter">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
	</Style>

	<!-- For consistency, also handle the pointer-over state -->
	<Style Selector="ComboBoxItem:pressed /template/ ContentPresenter">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="BorderThickness" Value="0"/>
	</Style>
	
</Styles>
