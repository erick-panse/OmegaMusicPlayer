<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="OmegaPlayer.UI.Controls.CustomMessageBox"
        Width="600" Height="350"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaToDecorationsHint="True"
        SystemDecorations="None"
		Background="Transparent"
		CornerRadius="10">

	<Border Classes="dialogMainBorder"
			BorderThickness="2"
			CornerRadius="10">

		<Grid RowDefinitions="50,*,Auto" >
			<!-- Custom Title Bar -->
			<Grid Grid.Row="0">
				<TextBlock x:Name="TitleText"
						   Classes="default"
						   VerticalAlignment="Center"
						   HorizontalAlignment="Center"
						   Margin="0 15 0 0"
						   FontSize="24"/>
			</Grid>

			<!-- Content -->
			<StackPanel Grid.Row="1" Spacing="20" Margin="20">
				<TextBlock x:Name="MessageText"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center"
						   TextWrapping="Wrap"/>
			</StackPanel>

			<!-- Buttons -->
			<StackPanel Grid.Row="2"
						Orientation="Horizontal"
						HorizontalAlignment="Center"
						Margin="15">

				<Button x:Name="YesButton"
						Classes="actionBtn default"
						IsVisible="False"
						Click="YesButton_Click"
						Margin="0 0 10 0">
					<TextBlock Text="{Localize Yes}"
							   Classes="default"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"/>
				</Button>

				<Button x:Name="OkButton"
						Classes="actionBtn default"
						IsVisible="False"
						Click="OkButton_Click"
						Margin="0 0 10 0">
					<TextBlock Text="{Localize OK}"
							   Classes="default"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"/>
				</Button>

				<Button x:Name="NoButton"
						Classes="actionBtn default"
						IsVisible="False"
						Click="NoButton_Click">
					<TextBlock Text="{Localize No}"
							   Classes="default"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center"/>
				</Button>
			</StackPanel>
		</Grid>
	</Border>

	<Window.Styles>
		<!-- Action Buttons -->
		<Style Selector="Button.actionBtn"> 
			<Setter Property="Height" Value="35"/>
			<Setter Property="MinWidth" Value="100"/>
		</Style>

	</Window.Styles>
</Window>