<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:OmegaPlayer.UI.Controls"
             xmlns:vm="using:OmegaPlayer.Features.Configuration.ViewModels"
             x:Class="OmegaPlayer.UI.Controls.GradientColorPicker"
             x:DataType="vm:ConfigViewModel">

	<StackPanel Spacing="20">
		<!-- Main Gradient -->
		<Border Classes="section">
			<StackPanel Spacing="10">
				<TextBlock Text="{Localize MainGradient}" Classes="h3"/>
				<controls:GradientPreview StartColor="{CompiledBinding WorkingMainStartColor}"
										  EndColor="{CompiledBinding WorkingMainEndColor}"
										  Classes="preview"/>
				<Grid ColumnDefinitions="*,20,*">
					<StackPanel Grid.Column="0" Spacing="5">
						<TextBlock Text="{Localize StartColor}"/>
						<ColorPicker Color="{CompiledBinding WorkingMainStartColor}" IsAlphaEnabled="False"/>
					</StackPanel>
					<StackPanel Grid.Column="2" Spacing="5">
						<TextBlock Text="{Localize EndColor}"/>
						<ColorPicker Color="{CompiledBinding WorkingMainEndColor}" IsAlphaEnabled="False"/>
					</StackPanel>
				</Grid>
			</StackPanel>
		</Border>

		<!-- Secondary Gradient -->
		<Border Classes="section">
			<StackPanel Spacing="10">
				<TextBlock Text="{Localize SecondaryGradient}" Classes="h3"/>
				<controls:GradientPreview StartColor="{CompiledBinding WorkingSecondaryStartColor}"
										  EndColor="{CompiledBinding WorkingSecondaryEndColor}"
										  Classes="preview"/>
				<Grid ColumnDefinitions="*,20,*">
					<StackPanel Grid.Column="0" Spacing="5">
						<TextBlock Text="{Localize StartColor}"/>
						<ColorPicker Color="{CompiledBinding WorkingSecondaryStartColor}" IsAlphaEnabled="False"/>
					</StackPanel>
					<StackPanel Grid.Column="2" Spacing="5">
						<TextBlock Text="{Localize EndColor}"/>
						<ColorPicker Color="{CompiledBinding WorkingSecondaryEndColor}"  IsAlphaEnabled="False"/>
					</StackPanel>
				</Grid>
			</StackPanel>
		</Border>

		<!-- Accent Gradient -->
		<Border Classes="section">
			<StackPanel Spacing="10">
				<TextBlock Text="{Localize AccentGradient}" Classes="h3"/>
				<controls:GradientPreview StartColor="{CompiledBinding WorkingAccentStartColor}"
										  EndColor="{CompiledBinding WorkingAccentEndColor}"
										  Classes="preview"/>
				<Grid ColumnDefinitions="*,20,*">
					<StackPanel Grid.Column="0" Spacing="5">
						<TextBlock Text="{Localize StartColor}"/>
						<ColorPicker Color="{CompiledBinding WorkingAccentStartColor}" IsAlphaEnabled="False"/>
					</StackPanel>
					<StackPanel Grid.Column="2" Spacing="5">
						<TextBlock Text="{Localize EndColor}"/>
						<ColorPicker Color="{CompiledBinding WorkingAccentEndColor}" IsAlphaEnabled="False"/>
					</StackPanel>
				</Grid>
			</StackPanel>
		</Border>

		<!-- Text Gradient -->
		<Border Classes="section">
			<StackPanel Spacing="10">
				<TextBlock Text="{Localize TextGradient}" Classes="h3"/>
				<controls:GradientPreview StartColor="{CompiledBinding WorkingTextStartColor}"
										  EndColor="{CompiledBinding WorkingTextEndColor}"
										  Classes="preview"/>
				<Grid ColumnDefinitions="*,20,*">
					<StackPanel Grid.Column="0" Spacing="5">
						<TextBlock Text="{Localize StartColor}"/>
						<ColorPicker Color="{CompiledBinding WorkingTextStartColor}" IsAlphaEnabled="False"/>
					</StackPanel>
					<StackPanel Grid.Column="2" Spacing="5">
						<TextBlock Text="{Localize EndColor}"/>
						<ColorPicker Color="{CompiledBinding WorkingTextEndColor}" IsAlphaEnabled="False"/>
					</StackPanel>
				</Grid>
			</StackPanel>
		</Border>

		<!-- Save Button -->
		<Button Content="{Localize SaveTheme}"
                Command="{Binding SaveCustomThemeCommand}"
                HorizontalAlignment="Right"
                Classes="default"
                Margin="0,10,0,0"/>
	</StackPanel>

	<UserControl.Styles>
		<Style Selector="Border.section">
			<Setter Property="Background" Value="{DynamicResource MainColorDarkerGradient}"/>
			<Setter Property="CornerRadius" Value="8"/>
			<Setter Property="Padding" Value="15"/>
		</Style>

		<Style Selector="controls|GradientPreview.preview">
			<Setter Property="Height" Value="30"/>
		</Style>

		<Style Selector="TextBlock.h3">
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Margin" Value="0,0,0,10"/>
		</Style>

		<Style Selector="ColorPicker">
			<Setter Property="Width" Value="200"/>
			<Setter Property="HorizontalAlignment" Value="Left"/>
		</Style>

	</UserControl.Styles>
</UserControl>