<Styles xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:local="clr-namespace:OmegaPlayer.Controls">
	
	<Style Selector="local|CustomSlider">
		<Setter Property="Template">
			<ControlTemplate>
				<Grid  MinHeight="20" >
					<!-- Track Background -->
					<Border Name="PART_Track"
                            Background="Gray"
                            Height="6"
							HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            CornerRadius="2" />
					<Border Name="PART_FilledTrack" Background="Blue" Height="6" Width="0" VerticalAlignment="Center" CornerRadius="2" HorizontalAlignment="Left" />


					<!-- Thumb -->
					<Canvas Name="PART_Canvas" Height="30" VerticalAlignment="Center" >
						<Thumb Name="PART_Thumb"
                               IsHitTestVisible="True">
							<Thumb.Template>
								<ControlTemplate>
									<Ellipse Fill="Red"
                                             Width="20"
                                             Height="20" />
								</ControlTemplate>
							</Thumb.Template>
						</Thumb>
					</Canvas>
				</Grid>
			</ControlTemplate>
		</Setter>
	</Style>
</Styles>
