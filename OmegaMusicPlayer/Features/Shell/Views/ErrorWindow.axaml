<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="OmegaMusicPlayer.Features.Shell.Views.ErrorWindow"
        Title="{Localize ErrorWindow_Title}"
        Width="500" Height="450"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        Background="{DynamicResource MainColor}">

	<Grid>
		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">

			<!-- Title -->
			<TextBlock x:Name="TitleText"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextColor}"
                       HorizontalAlignment="Center"/>

			<!-- Status Message -->
			<TextBlock x:Name="StatusText"
                       FontSize="16"
                       Foreground="{DynamicResource TextColor}"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       MaxWidth="400"/>

			<!-- Error Details -->
			<ScrollViewer x:Name="ErrorDetailsScroll"
                          MaxHeight="150"
                          MaxWidth="450"
                          IsVisible="False">
				<SelectableTextBlock x:Name="ErrorDetailsText"
                           FontSize="12"
                           Foreground="#FF6B6B"
                           TextWrapping="Wrap"
                           Background="#1E1E1E"
                           Padding="10"
                           FontFamily="Consolas"/>
			</ScrollViewer>

			<!-- Exit Button -->
			<Button x:Name="ExitButton"
					Classes="default"
                    Content="{Localize Close}"
                    Click="ExitButton_Click"/>

		</StackPanel>
	</Grid>
</Window>